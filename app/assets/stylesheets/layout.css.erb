body>.footer{
	width:100%;
	position:fixed;
	bottom:0px;
}

body>.main-body{
	min-height:100%;
	-webkit-box-shadow: 3px 3px 6px 0px rgba(50, 50, 50, 0.75);
	-moz-box-shadow:    3px 3px 6px 0px rgba(50, 50, 50, 0.75);
	box-shadow:         3px 3px 6px 0px rgba(50, 50, 50, 0.75);
}
body >.header{
	background-color:ghostwhite;
	color:cadetblue;
	text-align:center;
}
body >.header h1,body >.header p{
	margin-bottom:5px;
}

.main-body >.footer{
	text-align:center;
}

